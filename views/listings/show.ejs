<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row ">
        <div class="col-8 offset-3 mt-3">
            <h3><%= listing.title %></h3>
        </div>
        <div class="card offset-3" >
            <img src="<%=listing.image.url%>" class="card-img-top show-img mt-2" alt="...">
            <div class="card-body mt-2 col-6">
                <p class="card-text">
                <%= listing.description %> <br>
                <%= Number(listing.price).toLocaleString('en-IN', { style: 'currency' , currency: 'INR' }) %>/night <br>
                <%= listing.location %> <br>
                <%= listing.country %>

                </p>
            </div>
        </div>
    </div>
    <div class="btns">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark edit-btn  offset-3 col-1">Edit</a>
        <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
            <button class="btn btn-dark  offset-5">Delete</button>
        </form>
    </div>
    <hr>
    <div class="col-8 offset-3 mt-3 mb-3">
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
            <h4>Leave a Review:</h4>
            <div class="rating mt-2 mb-2">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" name="review[rating]" class="form-range"  min="1" max="5" step="1">
            </div>
            <div class="comment mt-2 mb-2">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" class="form-control" id="comment" required ></textarea>
                <div class="invalid-feedback">
                    Please write a comment.
                </div>
            </div>
            <button class="btn btn-outline-dark mt-2">Submit</button>
            
        </form>
    </div>
    <hr>
    
    <div class="col-8 offset-3 row ">
        <p><b>All reviews</b></p>
        <% for(review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3" style="border:1px solid black !important">
                <div class="card-body">
                    <h5 class="card-title">username</h5>
                    <p class="card-text"><%= review.comment%></p>
                    <p class="card-text mb-2"><%= review.rating%> star</p>
                </div>
            </div>
        <% } %>
    </div>
</body>
