<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row mt-3 mb-3 offset-2 col-8">
    <h3 class="mt-2">Edit your Listings</h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
            <div class="mb-3 mt-2">
                <label for="title" class="form-label">Title</label>
                <input id="title" class="form-control" type="text" name="listing[title]" value="<%= listing.title%>">
            </div>
            <div class="mb-3">
                <label  for="description" class="form-label">Description</label>
                <textarea class="form-control" id="dexcription" name="listing[description]" id=""><%= listing.description%></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input id="image" class="form-control" type="text" name="listing[image][url]" value="<%= listing.image.url%>">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input id="price" class="form-control" type="number" name="listing[price]" value="<%= listing.price%>">
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input id="country" class="form-control" type="text" name="listing[country]" value="<%= listing.country%>">
                
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input id="location" class="form-control" type="text" name="listing[location]" value="<%= listing.location%>">
            </div>
            <button class="btn btn-dark edit-btn mt-3">Edit</button>
        </form>
    </div>
</body>
